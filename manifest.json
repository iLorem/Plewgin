{
  "name": "Plewgin",
  "version": "1.0",
  "description": "Let's do this everybody!",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*","http://www.youtube.com/*", "http://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab"],
  "manifest_version": 2
}
